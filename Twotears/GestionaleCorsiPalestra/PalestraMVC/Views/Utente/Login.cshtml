@model PalestraMVC.Models.Utente

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1>Effettua il login</h1>

        <form method="post" asp-controller="Utente" asp-action="Profiloutente" name="myForm"
              onsubmit="return validateForm()">
