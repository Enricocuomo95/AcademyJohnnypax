                <label for="Username">Username</label>
                <input type="text" class="form-control" asp-for=Username id="val_username"/>
            </div>
            <div class="form-group">
                <label for="PasswordUtente">Password</label>
                <input type="password" class="form-control" asp-for=PasswordUtente id="val_password"/>
            </div>
            <button class="btn btn-primary">Login</button>
        </form>

    </div>
</div>
<script>
    function validateForm() {
        var username = document.getElementById("val_username").value;
        var password = document.getElementById("val_password").value;
      if (username == "" || password == "") {
        alert("Si prega di completare i campi");
        return false;
      }
    }
</script>


